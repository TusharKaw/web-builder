// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  sites     Site[]
  revisions PageRevision[]
  files     PageFile[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Site {
  id          String   @id @default(cuid())
  name        String
  subdomain   String   @unique
  domain      String?  // For custom domains
  wikiUrl     String   // MediaWiki API endpoint
  wikiToken   String?  // MediaWiki edit token
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  pages Page[]
}

model Page {
  id          String   @id @default(cuid())
  title       String
  slug        String
  content     String?
  isPublished Boolean  @default(false)
  isProtected Boolean  @default(false) // Page protection like MediaWiki
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  siteId String
  site   Site   @relation(fields: [siteId], references: [id], onDelete: Cascade)

  revisions PageRevision[]
  files     PageFile[]

  @@unique([siteId, slug])
}

model PageRevision {
  id          String   @id @default(cuid())
  content     String
  comment     String?  // Edit summary like MediaWiki
  isMinor     Boolean  @default(false) // Minor edit flag
  createdAt   DateTime @default(now())

  pageId String
  page   Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PageFile {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int
  path        String   // File storage path
  createdAt   DateTime @default(now())

  pageId String
  page   Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([pageId, filename])
}